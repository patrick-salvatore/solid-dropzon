{
  "version": "0.0.1",
  "name": "solid-dropzone",
  "description": "Simple HTML5 drag-drop zone with SolidJs, inspired by react-dropzone",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/esm/solid-dropzone.js",
  "module": "dist/esm/solid-dropzone.js",
  "types": "dist/types/solid-dropzone.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/source/solid-dropzone.jsx",
      "default": "./dist/esm/solid-dropzone.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "createDocs": "typedoc src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrick-salvatore/solid-dropzone.git"
  },
  "keywords": [
    "solidjs"
  ],
  "author": "patrick-salvatore",
  "license": "MIT",
  "homepage": "https://github.com/patrick-salvatore/solid-dropzone#readme",
  "peerDependencies": {
    "solid-js": "^1.3.8"
  },
  "dependencies": {
    "file-selector": "0.4.0"
  },
  "devDependencies": {
    "rollup": "2.58.0",
    "rollup-preset-solid": "1.0.1",
    "typedoc": "0.22.13",
    "typescript": "4.4.4"
  }
}
